{
  "compilerOptions": {
    /* ----- Output & Directories ----- */
    "target": "ES2022",                     
    "module": "NodeNext",                   
    "moduleResolution": "NodeNext",       
    "rootDir": "./src",                    
    "outDir": "./dist",                    

    /* ----- Imports & Interop ----- */
    "esModuleInterop": true,               
    "allowSyntheticDefaultImports": true,  
    "resolveJsonModule": true,             

    /* ----- Strict Type Checking ----- */
    "strict": true,                         
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                   

    /* ----- Debugging ----- */
    "sourceMap": true,                      

    /* ----- Node Types Support ----- */
    "types": ["node"],                      

    /* ----- Disable JSX (backend only) ----- */
    "jsx": "react"                           
  },

  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
